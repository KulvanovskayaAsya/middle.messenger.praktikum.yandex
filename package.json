    "@typescript-eslint/parser": "^7.4.0",
    "chai": "^5.1.1",
    "chai-as-promised": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-chai-friendly": "^0.7.4",
