{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "scripts": {
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint '**/*.scss' --fix",
    "lint:types": "tsc --noEmit",
