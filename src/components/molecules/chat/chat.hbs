<article data-chat-id='{{ id }}' class='chat {{ additionalClasses }}'>
  {{{ avatar }}}
  <div class='chat__content'>
    <h2 class='chat__name'>{{ name }}</h2>
    <p class='chat__message'>{{ lastMessage }}</p>
  </div>
  <div class='chat__unreaded-info'>
    {{#if unreadedCount}}
      <p class='chat__unreaded-count'>{{ unreadedCount }}</p>
    {{/if}}
  </div>
</article>
